@model IEnumerable<QueryPattern.Models.Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            @foreach (var col in new[] { "Id", "Title", "Year" })
            {
                <th>
                    @Html.ActionLink(col, "Sort", new { property = col })
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Id</td>
                <td>@movie.Title</td>
                <td>@movie.Year</td>
            </tr>
        }
    </tbody>
</table>